{% extends layout %}


{% block body %}
        <section id="content">
          <section class="vbox">
            <section class="scrollable wrapper-lg">
            <h3 class="font-thin m-t-xs">{{ categoriesbyid.nom_categories }}</h3>
              <div class="row">

                              <div class="col-sm-12">
                                <div class="blog-post">
                                  <div class="post-item">
                                    <div class="caption wrapper-lg">
                                      <h2 class="post-title"><a href="{{ app.index }}categories/{{ articles.id_categories }}/articles/{{ articles.id_articles }}">{{ articles.titre|title }}</a></h2>
                                      <div class="post-sum">
                                        <p>
                                          {{ articles.contenu|truncate(250, true, '...')|raw }}
                                        </p>
                                      </div>
                                      <div class="line line-lg"></div>
                                      <div class="text-muted">
                                        <i class="fa fa-user icon-muted"></i> by <a href="{{ app.index }}profil/{{ articles.id_utilisateurs }}" class="m-r-sm">{{ articles.pseudo }}</a>
                                        <i class="fa fa-folder-open icon-muted"></i> <a href="{{ app.index }}categories/{{ articles.id_categories }}" class="m-r-sm">{{ articles.nom_categories }}</a>
                                        <i class="fa fa-clock-o icon-muted"></i> {{ articles.date_articles }}
                                        <a href="{{ app.index }}categories/{{ articles.id_categories }}/articles/{{ articles.id_articles }}#comments" class="m-l-sm"><i class="fa fa-comment-o icon-muted"></i> {% if articles.nbCommentaires %}{{ articles.nbCommentaires }} commentaire{% if articles.nbCommentaires > 1 %}s{% endif %} {% else %} 0 commentaire{% endif %}</a>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>

                  <h4 class="m-t-lg m-b">{% if articles.nbCommentaires %}{{ articles.nbCommentaires }} commentaire{% if articles.nbCommentaires > 1 %}s{% endif %} {% else %} 0 commentaire{% endif %}</h4>

                  <section class="comment-list block" id="comments">

                    {% for commentaire in commentaires %}

                    <article id="comment-id-1" class="comment-item">
                      <a class="pull-left thumb-sm">
                        <img src="{{ app.asset_path }}/images/a0.png" class="img-circle">
                      </a>
                      <section class="comment-body m-b">
                        <header>
                          <a href="#"><strong>{{ commentaire.pseudo }}</strong></a>
                          <span class="text-muted text-xs block m-t-xs">
                            {{ commentaire.date_commentaires }}
                          </span>
                        </header>
                        <div class="m-t-sm">{{ commentaire.message_commentaires }}</div>
                      </section>
                    </article>

                    {% endfor %}

                  </section>


                  <h4 class="m-t-lg m-b">Laisser un commentaire</h4>
                  <form>
                    <div class="form-group pull-in clearfix">
                      <div class="col-sm-6">
                        <label>Your name</label>
                        <input type="text" class="form-control" placeholder="Name">
                      </div>
                      <div class="col-sm-6">
                        <label >Email</label>
                        <input type="email" class="form-control" placeholder="Enter email">
                      </div>
                    </div>
                    <div class="form-group">
                      <label>Comment</label>
                      <textarea class="form-control" rows="5" placeholder="Type your comment"></textarea>
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-success">Submit comment</button>
                    </div>
                  </form>
                </div>
 

            </div>

          </section>
        </section>
      </section>

{% endblock %}