<!DOCTYPE html>
<html lang="en" class="app">
<head>  
  <meta charset="utf-8" />
  <title>Zeuppie | App</title>
  <meta name="description" content="app, web app, responsive, admin dashboard, admin, flat, flat ui, ui kit, off screen nav" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  <link rel="stylesheet" href="{{ app.asset_path }}/js/jPlayer/jplayer.flat.css" type="text/css" />
  <link rel="stylesheet" href="{{ app.asset_path }}/css/bootstrap.css" type="text/css" />
  <link rel="stylesheet" href="{{ app.asset_path }}/css/animate.css" type="text/css" />
  <link rel="stylesheet" href="{{ app.asset_path }}/css/font-awesome.min.css" type="text/css" />
  <link rel="stylesheet" href="{{ app.asset_path }}/css/simple-line-icons.css" type="text/css" />
  <link rel="stylesheet" href="{{ app.asset_path }}/css/font.css" type="text/css" />
  <link rel="stylesheet" href="{{ app.asset_path }}/css/app.css" type="text/css" />
  <script src="http://cdn.ckeditor.com/4.5.0/standard-all/ckeditor.js"></script>
    <!--[if lt IE 9]>
    <script src="{{ app.asset_path }}/js/ie/html5shiv.js"></script>
    <script src="{{ app.asset_path }}/js/ie/respond.min.js"></script>
    <script src="{{ app.asset_path }}/js/ie/excanvas.js"></script>
  <![endif]-->
</head>
<body class="">
  <section class="vbox">
    <header class="bg-white-only header header-md navbar navbar-fixed-top-xs">
      <div class="navbar-header aside bg-info dk">
        <a class="btn btn-link visible-xs" data-toggle="class:nav-off-screen,open" data-target="#nav,html">
          <i class="icon-list"></i>
        </a>
        <a href="index.html" class="navbar-brand text-lt">
          <i class="icon-book-open"></i>
          <img src="images/logo.png" alt="." class="hide">
          <span class="hidden-nav-xs m-l-sm">Zeuppie</span>
        </a>
        <a class="btn btn-link visible-xs" data-toggle="dropdown" data-target=".user">
          <i class="icon-settings"></i>
        </a>
      </div>      <ul class="nav navbar-nav hidden-xs">
        <li>
          <a href="#nav,.navbar-header" data-toggle="class:nav-xs,nav-xs" class="text-muted">
            <i class="fa fa-indent text"></i>
            <i class="fa fa-dedent text-active"></i>
          </a>
        </li>
      </ul>
      <form class="navbar-form navbar-left input-s-lg m-t m-l-n-xs hidden-xs" role="search">
        <div class="form-group">
          <div class="input-group">
            <span class="input-group-btn">
              <button type="submit" class="btn btn-sm bg-white btn-icon rounded"><i class="fa fa-search"></i></button>
            </span>
            <input type="text" class="form-control input-sm no-border rounded" placeholder="Rechercher documents,vidéos,articles ...">
          </div>
        </div>
      </form>
      <div class="navbar-right ">
        <ul class="nav navbar-nav m-n hidden-xs nav-user user">
          <li class="hidden-xs">
            <a href="#" class="dropdown-toggle lt" data-toggle="dropdown">
              <i class="icon-bell"></i>
              <span class="badge badge-sm up bg-danger count">{{ nbnotifs }}</span>
            </a>
            <section class="dropdown-menu aside-xl animated fadeInUp">
              <section class="panel bg-white">
                <div class="panel-heading b-light bg-light">
                  <strong>Vous avez <span class="count">{{ nbnotifs }}</span> notifications</strong>
                </div>
                <div class="list-group list-group-alt">
                  {% for notifs in notifications %}
                  {% if notifs == true %}
                  <a href="#" class="media list-group-item">
                    <span class="media-body block m-b-none">
                      {{ notifs.message }}<br>
                      <small class="text-muted">{{ notifs.date_notifications }}</small>
                    </span>
                  </a>
                  {% else %}
                  <a href="#" class="media list-group-item">
                    <span class="media-body block m-b-none">
                      Aucune notification
                    </span>
                  </a>
                  {% endif %}
                  {% endfor %}
                </div>
                <div class="panel-footer text-sm">
                  <a href="#" class="pull-right"><i class="fa fa-cog"></i></a>
                  <a href="{{ app.index }}notifications" data-toggle="class:show animated fadeInRight">Voir toutes les notifications</a>
                </div>
              </section>
            </section>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle bg clear" data-toggle="dropdown">
              <span class="thumb-sm avatar pull-right m-t-n-sm m-b-n-sm m-l-sm">
                <img src="{{ app.asset_path }}/images/a0.png" alt="...">
              </span>
              {{ users }} <b class="caret"></b>
            </a>
            <ul class="dropdown-menu animated fadeInRight">            
              <li>
                <span class="arrow top"></span>
                <a href="{{ app.index }}parametres">Paramètres</a>
              </li>
              <li>
                <a href="{{ app.index }}profil">Profil</a>
              </li>
              <li>
                <a href="{{ app.index }}notifications">
                  <span class="badge bg-danger pull-right">{{ nbnotifs }}</span>
                  Notifications
                </a>
              </li>
              <li>
                <a href="{{ app.index }}aide">Aide</a>
              </li>
              <li class="divider"></li>
              <li>
                <a href="{{ app.index }}deconnexion.php" data-toggle="ajaxModal" >Deconnexion</a>
              </li>
            </ul>
          </li>
        </ul>
      </div>      
    </header>
    <section>
      <section class="hbox stretch">
        <!-- .aside -->
        <aside class="bg-black dk aside hidden-print" id="nav">          
          <section class="vbox">
            <section class="w-f-md scrollable">
              <div class="slim-scroll" data-height="auto" data-disable-fade-out="true" data-distance="0" data-size="10px" data-railOpacity="0.2">
                


                <!-- nav -->                 
                <nav class="nav-primary hidden-xs">
                  <ul class="nav bg clearfix">
                    <li class="hidden-nav-xs padder m-t m-b-sm text-xs text-muted">
