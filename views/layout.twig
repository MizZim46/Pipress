                      <a href="{{ app.index }}accueil">
                        <i class="icon-disc icon text-success"></i>
                        <span class="font-bold">Quoi de neuf</span>
                      </a>
                    </li>
                    {% for catmenu in categories %}
                    <li>
                      <a href="{{ app.index }}categories/{{ catmenu.id_categories }}">
                        <i class="icon-folder icon text-primary"></i>
                        <span>{{ catmenu.nom_categories }}</span>
                      </a>
                    </li>
                    {% endfor %}
                    <li>
                    <li class="m-b hidden-nav-xs"></li>
                  </ul>
                  <ul class="nav" data-ride="collapse">
                    <li class="hidden-nav-xs padder m-t m-b-sm text-xs text-muted">
                      Interface
                    </li>
                    <li>
                      <a href="{{ app.index }}ajouter/articles">
                        <i class="icon-plus"></i>
                        <span class="font-bold">Créer un article</span>
                      </a>
                    </li>
                    <li>
                      <a href="{{ app.index }}ajouter/categorie">
                        <i class="icon-plus"></i>
                        <span class="font-bold">Créer une catégorie</span>
                      </a>
                    </li>
                  </ul>
                </nav>
                <!-- / nav -->
              </div>
            </section>
            

          </section>
        </aside>
        <!-- /.aside -->

        {% block body %}
        {% endblock %}

      </section>    
  </section>      
  <script src="{{ app.asset_path }}/js/jquery.min.js"></script>
  <!-- Bootstrap -->
  <script src="{{ app.asset_path }}/js/bootstrap.js"></script>
